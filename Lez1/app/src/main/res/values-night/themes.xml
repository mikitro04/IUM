<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Lez1" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:windowBackground">@color/light_blue</item>
        <item name="android:layout_gravity">center</item>
    </style>
    
    <style name="Theme.Lez1" parent="Base.Theme.Lez1" />

    <style name="BaseButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/cobalt</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Pulsante rosso per il logout -->
    <style name="RedButton" parent="BaseButton">
        <item name="android:backgroundTint">@color/red</item>
    </style>

    <style name="SeekBarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Colori personalizzati, es: -->
        <item name="android:progressTint">@color/black</item>
        <item name="android:thumbTint">@color/black</item>
        <item name="android:progressBackgroundTint">#80AAB7</item>
    </style>

</resources>